                @Html.DisplayFor(modelItem => item.low)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.latestPrice)
            </td>
        </tr>



        }

        <tr>
            <td>
                <a id="dbopt" asp-controller="Home" asp-action="PopulateTopGainers"><img src="~/img/button_save-data.png" /></a>
